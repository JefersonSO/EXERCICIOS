algoritmo "CONVERSOR DE MEDIDA"
// Função :
// Autor :
// Data : 07/05/2022
// Seção de Declarações 
var
  Medida: Real
Procedimento cmedida ( A: Real)
Inicio
      Escreval(Medida / 1000, "Km")
     Escreval(Medida / 100, "Hm")
     Escreval(Medida /10, "Dam")
     Escreval(Medida * 10, "Dm")
     Escreval(Medida * 100, "Cm")
     Escreval(Medida * 1000, "Mm")
FimProcedimento

inicio
     Escreva(" Digite uma distancia em metros: ")
     Leia(Medida)
     Escreval(" A distancia de ", Medida, "m coreesponde a: ")
     Cmedida (medida)
// Seção de Comandos 
fimalgoritmo
